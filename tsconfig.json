{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@telemetry-ingest-src": [
        "./apps/telemetry-ingest/src"
      ],
      "@telemetry-ingest-src/*": [
        "./apps/telemetry-ingest/src/*"
      ],
      "@lib/http-infra": [
        "libs/http-infra/src"
      ],
      "@lib/http-infra/*": [
        "libs/http-infra/src/*"
      ],
      "@lib/data-infra": [
        "libs/data-infra/src"
      ],
      "@lib/data-infra/*": [
        "libs/data-infra/src/*"
      ]
    }
  }
}